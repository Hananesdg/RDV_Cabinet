<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RendezVousMaui.Views.EditClientPage"
             BackgroundColor="#F2F2F2"
             Title="Modifier client">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Entry Text="{Binding Client.Nom}" />
        <Entry Text="{Binding Client.Prenom}" />
        <Entry Text="{Binding Client.Telephone}" Keyboard="Telephone" />
        <Entry Text="{Binding Client.Email}" Keyboard="Email" />

        <Button Text="Enregistrer"
                BackgroundColor="#34C759"
                TextColor="White"
                CornerRadius="10"
                Command="{Binding UpdateCommand}" />

        <Button Text="Supprimer"
                BackgroundColor="#FF3B30"
                TextColor="White"
                CornerRadius="10"
                Command="{Binding DeleteCommand}" />
    </VerticalStackLayout>

</ContentPage>

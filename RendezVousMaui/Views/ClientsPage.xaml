<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RendezVousMaui.Views.ClientsPage"
             Title="Clients"
             BackgroundColor="#F2F2F2">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Button Text="âž• Ajouter un client"
                BackgroundColor="#3E64FF"
                TextColor="White"
                CornerRadius="10"
                Command="{Binding AddClientCommand}" />

        <CollectionView ItemsSource="{Binding Clients}"
                        SelectionMode="Single"
                        SelectionChanged="OnSelectClient">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Stroke="#CCCCCC" StrokeThickness="1" Padding="15" Margin="0,5" BackgroundColor="White">

                        <VerticalStackLayout>
                            <Label Text="{Binding Nom}" FontSize="18" FontAttributes="Bold" TextColor="#1E1E1E"/>
                            <Label Text="{Binding Prenom}" FontSize="16" TextColor="Gray"/>
                            <Label Text="{Binding Telephone}" FontSize="14" TextColor="#3E64FF"/>
                        </VerticalStackLayout>

                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

    </VerticalStackLayout>
</ContentPage>

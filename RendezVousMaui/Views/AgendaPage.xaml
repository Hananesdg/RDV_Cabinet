<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="RendezVousMaui.Views.AgendaPage"
    Title="Agenda"
    BackgroundColor="#F2F2F2">

    <VerticalStackLayout Padding="20" Spacing="15">

        <DatePicker Date="{Binding SelectedDate}" />

        <CollectionView ItemsSource="{Binding Slots}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Stroke="#CCC" Padding="10" Margin="0,5" BackgroundColor="White">
                        <VerticalStackLayout>
                            <Label Text="{Binding Heure}" FontSize="18" />
                            <Label Text="{Binding Statut}" TextColor="Gray"/>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
